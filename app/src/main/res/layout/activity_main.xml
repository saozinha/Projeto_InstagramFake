<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffef83ff">

    <LinearLayout
        android:id="@+id/layout_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff838383"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/igicon" />

        <TextView
            android:id="@+id/textFake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INSTAGRAM FAKE"
            android:textSize="50sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/logo"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="por Conceição Lourenço"
            android:textSize="20sp"
            android:layout_below="@+id/textFake"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textColor="#ffffffff" />

    </LinearLayout >


    <ListView
        android:id="@+id/listAmigos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff9c9c9c"></ListView>


</LinearLayout>
